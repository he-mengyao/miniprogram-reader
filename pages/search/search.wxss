.body {
  padding: 30rpx;
}
.fixed {
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  right: 0;
  background-color: #fff;
  height: 100rpx;
}
.ipt {
  position: relative;
  top: 20rpx;
  left: 30rpx;
  background-color: #eee;
  height: 60rpx;
  width: 93%;
  border-radius: 20rpx;
  text-align: center;
}
.div-100 {
  height: 60rpx;
}
input {
  position: absolute;
  left: 180rpx;
  width: 60%;
  font-size: 12px;
  color: #8a8a8a;
}
.close {
  height: 40rpx;
  width: 40rpx;
  position: absolute;
  top: 10rpx;
  right: 10rpx;
}
.sear {
  position: absolute;
  left: 120rpx;
  height: 40rpx;
  width: 40rpx;
}
.placeholder {
  font-size: 13px;
  color: #8a8a8a;
}
.change {
  height: 80rpx;
  width: 100%;
}
.load {
  height: 40rpx;
  width: 40rpx;
  margin-right: 20rpx;
}
.label {
  color: #ffffff;
}
.label-bd {
  padding: 10rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
.content {
  height: 60rpx;
  border-bottom: 1px solid #eee;
}
.content-search {
  height: 300rpx;
  border-bottom: 1px solid #eeeeee;
  display: flex;
  align-items: center;
  padding-right: 20rpx;
}
.cover {
  height: 240rpx;
  margin-right: 30rpx;
}
.title {
  color: #000000;
  font-size: 13px;
}
.author {
  font-size: 12px;
}
.bd {
  height: 110rpx;
  width: 500rpx;
  font-size: 10px;
  line-height: 1.5;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}